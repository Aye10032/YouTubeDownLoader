LocalVideoInterface,SettingInterface,SubscribeInterface,TodoListInterface,InfoInterface{
    border: 1px solid rgb(36, 36, 36);
    border-right: none;
    border-bottom: none;
    border-top-left-radius: 10px;
    background-color: rgb(51, 51, 51);
}

ScrollArea {
    background-color: rgb(39, 39, 39);
    border: none;
}

QWidget#ScrollWidget{
    background-color: rgb(39, 39, 39);
}

QLabel#Title{
    font-size: 24px;
    font-family: 'Segoe UI', 'Microsoft YaHei';
    color: white;
}

QScrollBar {
    background: transparent;
    width: 4px;
    margin-top: 32px;
    margin-bottom: 0;
    padding-right: 2px;
}

QScrollBar::sub-line {
    background: transparent;
}

QScrollBar::add-line {
    background: transparent;
}

QScrollBar::handle {
    background: rgb(122, 122, 122);
    border: 2px solid rgb(128, 128, 128);
    border-radius: 1px;
    min-height: 32px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}